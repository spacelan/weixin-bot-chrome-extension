{
  "name": "weixin-bot-chrome-extension",
  "scripts": {
    "lint": "eslint app/scripts.babel/",
    "build": "cross-env NODE_ENV=production webpack",
    "watch": "webpack"
  },
  "dependencies": {
    "amazeui": "^2.5.2",
    "babel-core": "^6.0.0",
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.1.2",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "jquery": "^2.2.0",
    "json-loader": "^0.5.4",
    "path": "^0.12.7",
    "style-loader": "^0.13.0",
    "vue": "^1.0.20-csp",
    "webpack": "^1.12.13",
    "wechat4u": "^0.2.5"
  },
  "devDependencies": {
    "babel-eslint": "^5.0.1",
    "eslint": "^2.5.3",
    "estraverse-fb": "^1.3.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "quotes": [
        "warn",
        "single"
      ],
      "semi": [
        "warn",
        "always"
      ],
      "strict": "off",
      "no-console": "off"
    },
    "globals": {
      "chrome": true,
      "$": true
    },
    "parser": "babel-eslint"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
